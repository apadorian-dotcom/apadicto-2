{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/server/index"
    },
    { 
      "source": "/((?!api).*)", 
      "destination": "/" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
